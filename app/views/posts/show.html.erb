<div id="post_content">
	<h1 class="title"> 
		<%= @post.title %>
	</h1>

	<p class="date">
		<%= time_ago_in_words(@post.created_at) %> Ago
	</p>
	<p class="body">
		<%= @post.body %>
	</p>
	<div class="buttons">
		<button class="button"><%=link_to "Edit", edit_post_path %></button>
		<buttton class="button"><%= link_to "Delete", @post, method: :delete, confirm: "Are you Sure?" %></buttton>
	</div>
</div>