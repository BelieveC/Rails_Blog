<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="sidebar">
	<div id="logo">
		<%= link_to root_path do %>
			<%= image_tag "logo.jpg", id: "logo_image" %>
		<% end %>
	</div>
	<ul>
		 <li class="category">Website</li>
	   	 <li><%= link_to "Blog", root_path %></li>
		 <li><%= link_to "About", about_path%></li>
	</ul>	
	<ul>
		<li class="category">Social</li>
		<li><%= link_to "Twitter","https://twitter.com/cayadav"%></li>
		<li><%= link_to "Facebook","https://www.facebook.com/cayadav2009"%></li>
		<li><%= link_to "Github","https://github.com/BelieveC"%></li>	
		<% if !user_signed_in? %>
			<p class="sign_in"><%= link_to "Sign-In",new_user_session_path %></p>
		<% end %>
	</ul>
</div>
<div id="main_content">
	<div id="header">
		<% if current_page?(root_path)%>
			<p>News Feed</p>
		<% elsif current_page?(about_path)%>
			<p>About</p>
		<% else %>
			<p><%= link_to "News Feed", root_path%></p>
		<% end%>
		<% if user_signed_in? %>
			<div class="buttons">
				<button class="button"><%= link_to "New Post", new_post_path%></button>
				<button class="button"><%= link_to "Logout", destroy_user_session_path %></button>
			</div>
		<% end%>
	</div>
	<% flash.each do |name, msg| %>
		<%= content_tag(:div,msg,class: "alert")%>
	<%end%>
	<%= yield %>
</div>



</body>
</html>
